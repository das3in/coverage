<h1>Teams</h1>

<% if user_signed_in? %>
  <%= link_to "New team", new_team_path, class: "btn btn-primary" %>
<% end %>

<div class="form-group">
  <label for="division-select"><strong>Division</strong></label>
  <select class="form-control" id="teams-division-select">
    <option value="pro">Pro</option>
    <option value="semipro">Semi-pro</option>
    <option value="3">Division 3</option>
    <option value="4">Division 4</option>
  </select>
</div>

<%= render "team-list", teams: @teams %>
